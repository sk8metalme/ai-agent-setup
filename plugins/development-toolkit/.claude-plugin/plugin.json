{
  "name": "development-toolkit",
  "description": "Complete development workflow: planning, coding, PR management, and changelog generation. Essential tools for daily development work.",
  "version": "1.4.0",
  "author": {
    "name": "sk8metalme"
  },
  "repository": "https://github.com/sk8metalme/ai-agent-setup",
  "license": "MIT",
  "keywords": ["development", "workflow", "pr", "changelog", "planning", "documentation"],
  "commands": [
    "./commands/plan.md",
    "./commands/dev.md",
    "./commands/documentation.md",
    "./commands/create_pr.md",
    "./commands/git_sync.md",
    "./commands/suggest-claude-md.md"
  ],
  "agents": ["./agents/changelog-generator/AGENT.md", "./agents/pr-resolver/AGENT.md"],
  "skills": ["./skills/changelog/SKILL.md", "./skills/secrets-guard/SKILL.md"],
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/suggest-claude-md-hook-global.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/suggest-claude-md-hook-global.sh"
          }
        ]
      }
    ]
  }
}
